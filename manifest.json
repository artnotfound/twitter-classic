{
  "name": "Twitter Classic",
  "description": "Ensures chronologically ordered timelines, removes the Moments™ tab and blocks Promoted Tweets™.",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": ["*://*/*"],
  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["jquery-1.12.0.min.js", "classic.js"],
      "css": ["classic.css"]
    }
  ],
  "browser_action": {
    "default_icon" : "icon-16.png",
    "default_title": "Enable/Disable"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
